        <i class="fas fa-crown"></i> Upgrade to Pro
    </button>
</div>

        </div>

        <div class="back-link">
            <a href="#" onclick="idk()">
                <i class="fas fa-arrow-left"></i>
                Back to Library
            </a>
        </div>
    </div>

    <script>

        function idk() {
            window.history.back()
        }
        // Function to initiate PayPal payment
        async function startPayment() {
            try {
                // Show loading state
                const button = document.querySelector('.plan-button.pro');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                button.disabled = true;
                
                // Call backend to create PayPal order
                const response = await fetch('/pay', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success && data.approvalUrl) {
                    // Redirect to PayPal for payment approval
                    window.location.href = data.approvalUrl;
                } else {
                    throw new Error(data.message || 'Payment initialization failed');
                }
                
            } catch (error) {
                console.error('Payment error:', error);
                alert('Payment failed: ' + error.message);
                
                // Restore button state
                const button = document.querySelector('.plan-button.pro');
                button.innerHTML = '<i class="fas fa-crown"></i> Upgrade to Pro';
                button.disabled = false;
            }
        }
    </script>
</body>
</html>